{
  "name": "@storybook/linter-config",
  "version": "3.1.2",
  "description": "The config storybook uses to lint code",
  "keywords": ["config", "eslint", "prettier", "storybook"],
  "homepage": "https://storybook.js.org/",
  "repository": {
    "type": "git",
    "url": "https://github.com/storybookjs/linter-config.git"
  },
  "license": "ISC",
  "author": "Norbert de Langen",
  "main": "index.js",
  "files": [".eslintrc.js", "index.js", "prettier.config.js", "cspell.shared.yml"],
  "scripts": {
    "lint": "eslint ./test/**/*.@(js|jsx|ts|tsx|cjs|mjs|json) ./*.@(js|jsx|ts|tsx|cjs|mjs|json) --fix",
    "lint:html": "prettier !(node_modules)/**/*.@(html) ./*.@(html) --write",
    "lint:json": "prettier !(node_modules)/**/*.@(json) ./*.@(json) --write",
    "lint:md": "prettier !(node_modules)/**/*.@(md|markdown) ./*.@(md|markdown) --write",
    "lint:yml": "prettier !(node_modules)/**/*.@(yaml|yml) ./*.@(yaml|yml) --write",
    "lint:package": "sort-package-json !(node_modules)/**/package.json ./package.json"
  },
  "dependencies": {
    "@cspell/eslint-plugin": "^7.3.8",
    "@eslint-community/eslint-plugin-eslint-comments": "^4.1.0",
    "@typescript-eslint/eslint-plugin": "^6.9.1",
    "@typescript-eslint/parser": "^6.9.1",
    "eslint": "^8.53.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-config-semistandard": "^17.0.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-file-progress": "^1.3.0",
    "eslint-plugin-html": "^7.1.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-json-format": "^2.0.1",
    "eslint-plugin-n": "^16.2.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jsonc-eslint-parser": "^2.4.0",
    "prettier": "^3.0.3",
    "sort-package-json": "^2.6.0",
    "vfile-reporter": "^8.1.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.34",
    "react": "^18.2.0",
    "typescript": "^5.2.2"
  },
  "packageManager": "yarn@4.0.1",
  "collective": {
    "type": "opencollective",
    "url": "https://opencollective.com/storybook"
  }
}
